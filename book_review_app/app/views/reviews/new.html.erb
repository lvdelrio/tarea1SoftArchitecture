<h1>Create a New Review</h1>

<%= form_with(model: @review, local: true) do |form| %>
  <div>
    <%= form.label :book_id, "Select Book" %>
    <%= form.collection_select :book_id, Book.all, :id, :name, prompt: "Select a book" %>
  </div>

  <div>
    <%= form.label :review %>
    <%= form.text_area :review %>
  </div>

  <div>
    <%= form.label :score %>
    <%= form.number_field :score, min: 1, max: 5 %>
  </div>

  <%= form.submit "Create Review" %>
<% end %>